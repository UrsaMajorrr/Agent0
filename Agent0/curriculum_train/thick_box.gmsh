
// Initialize Gmsh
[initialize]

// Set the dimensions of the box
set 0 "length" 9.0
set 0 "width" 9.0
set 0 "height" 9.0

// Create a rectangular prism
add_box 0 0 0 9.0 9.0 9.0

// Synchronize with Gmsh model
[synchronize]

// Create physical groups
add_physical_group 2 3
add_physical_group 2 4
add_physical_group 2 5
add_physical_group 2 6
add_physical_group 2 7
add_physical_group 2 8
add_physical_group 3 2

// Set mesh size
set_size 2 1.5
set_size 3 1.5

// Generate the mesh
[generate_entities 3]

// Save the mesh file
write thick_box.msh
